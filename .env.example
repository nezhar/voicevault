# Container Registry and Versioning
REGISTRY=
VERSION=latest

# Database Configuration
POSTGRES_DB=voicevault
POSTGRES_USER=voicevault_user
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_PORT=5432

# API Configuration
API_PORT=8000
UI_PORT=3000

# API Keys (Required for production)
GROQ_API_KEY=your_groq_api_key_here
HUGGINGFACE_TOKEN=your_huggingface_token_here

# File Storage
UPLOAD_DIR=uploads
MAX_FILE_SIZE=524288000

# S3 Configuration (Works with any S3-compatible provider)
# Examples:
# Vultr: https://ewr1.vultrobjects.com
# AWS: https://s3.amazonaws.com  
# DigitalOcean: https://nyc3.digitaloceanspaces.com
# MinIO (local): http://minio:9000
S3_ENDPOINT_URL=your_s3_endpoint_url
S3_ACCESS_KEY=your_s3_access_key
S3_SECRET_KEY=your_s3_secret_key
S3_BUCKET_NAME=voicevault

# Processing Configuration
PROCESSING_TIMEOUT=3600

# Worker Configuration
WORKER_INTERVAL=10
BATCH_SIZE=5
GROQ_MODEL=whisper-large-v3-turbo

# Development Settings
DEBUG=true
LOG_LEVEL=INFO