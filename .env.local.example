# Local Development Environment Configuration
# Copy this to .env for local development with MinIO

# Container Registry and Versioning
REGISTRY=
VERSION=latest

# Database Configuration (Local)
POSTGRES_HOST=db
POSTGRES_PORT=5432
POSTGRES_DB=voicevault
POSTGRES_USER=voicevault_user
POSTGRES_PASSWORD=dev_password_123

# API Configuration
API_PORT=8000
UI_PORT=3000

# API Keys
GROQ_API_KEY=your_groq_api_key_here
CEREBRAS_API_KEY=your_cerebras_api_key_here
HUGGINGFACE_TOKEN=your_huggingface_token_here

# LLM Configuration
LLM_PROVIDER=groq  # Options: groq, cerebras, ollama
LLM_MODEL=llama-3.3-70b-versatile

# Ollama Configuration (only needed if LLM_PROVIDER=ollama)
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama3.2

# ASR Configuration
ASR_PROVIDER=groq
ASR_MODEL=whisper-large-v3-turbo

# File Storage
UPLOAD_DIR=uploads
MAX_FILE_SIZE=524288000

# S3 Configuration (Local MinIO)
S3_ENDPOINT_URL=http://minio:9000
S3_ACCESS_KEY=minioadmin
S3_SECRET_KEY=minioadmin
S3_BUCKET_NAME=voicevault

# MinIO Configuration (Local Development)
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=minioadmin
MINIO_PORT=9000
MINIO_CONSOLE_PORT=9001

# Processing Configuration
PROCESSING_TIMEOUT=3600

# Worker Configuration
WORKER_INTERVAL=10
BATCH_SIZE=5

# Development Settings
DEBUG=true
LOG_LEVEL=INFO