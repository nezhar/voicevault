# Database
DATABASE_URL=postgresql://voicevault_user:dev_password_123@db:5432/voicevault

# Worker Configuration
WORKER_MODE=download
WORKER_INTERVAL=10
MAX_RETRIES=3
BATCH_SIZE=5

# ASR Configuration
ASR_PROVIDER=groq  # Options: groq
ASR_MODEL=whisper-large-v3-turbo  # Groq models: whisper-large-v3, whisper-large-v3-turbo

# LLM Configuration
LLM_PROVIDER=groq  # Options: groq, cerebras
LLM_MODEL=llama-3.3-70b-versatile  # Groq: llama-3.3-70b-versatile, llama-3.1-70b-versatile | Cerebras: llama3.1-70b, llama3.1-8b

# API Keys
GROQ_API_KEY=your_groq_api_key_here
CEREBRAS_API_KEY=your_cerebras_api_key_here

# File Storage
DOWNLOAD_DIR=downloads
MAX_FILE_SIZE=26214400  # 25MB in bytes

# Logging
LOG_LEVEL=INFO
