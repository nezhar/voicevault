# Production Environment Template
# Copy this file to .env and configure with your actual values

# Container Registry and Versioning
REGISTRY=your-registry.com/your-project/
VERSION=latest

# Authentication (Required for production)
ACCESS_TOKEN=your-secure-token-here-make-it-long-and-random

# Database Configuration (Required)
POSTGRES_HOST=your-database-host
POSTGRES_PORT=5432
POSTGRES_DB=voicevault
POSTGRES_USER=voicevault_user
POSTGRES_PASSWORD=your-secure-database-password

# API Configuration
API_PORT=8000
UI_PORT=3000

# API Keys
GROQ_API_KEY=your-groq-api-key-here
CEREBRAS_API_KEY=your-cerebras-api-key-here
HUGGINGFACE_TOKEN=your-huggingface-token-here

# LLM Configuration
LLM_PROVIDER=groq  # Options: groq, cerebras, ollama
LLM_MODEL=llama-3.3-70b-versatile

# Ollama Configuration (only needed if LLM_PROVIDER=ollama)
OLLAMA_BASE_URL=http://ollama:11434  # Use service name in Docker Compose
OLLAMA_MODEL=llama3.2

# ASR Configuration
ASR_PROVIDER=groq
ASR_MODEL=whisper-large-v3-turbo

# File Storage
UPLOAD_DIR=uploads
MAX_FILE_SIZE=524288000

# S3 Configuration (Required - works with any S3-compatible provider)
# Examples:
# Vultr: https://ewr1.vultrobjects.com
# AWS: https://s3.amazonaws.com  
# DigitalOcean: https://nyc3.digitaloceanspaces.com
S3_ENDPOINT_URL=your-s3-endpoint-url
S3_ACCESS_KEY=your-s3-access-key
S3_SECRET_KEY=your-s3-secret-key
S3_BUCKET_NAME=voicevault

# Processing Configuration
PROCESSING_TIMEOUT=3600

# Worker Configuration
WORKER_INTERVAL=10
BATCH_SIZE=5

# Development Settings
DEBUG=false
LOG_LEVEL=INFO